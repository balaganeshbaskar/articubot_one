<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

  <!-- Materials -->
    <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
    </material>
    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>
    <material name="white"> 
        <color rgba="1 1 1 1" />
    </material>
    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

  <!-- BASE LINK -->
  <link name="base_link">

    </link>

  <!-- BASE ROTATION JOINT (360 degrees) -->
  <joint name="joint_base" type="continuous">
    <parent link="base_link"/>
    <child link="link_1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="link_1">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.2" radius="0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.11" radius="0.11"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="1.0" length="0.1" radius="0.1">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- ARM 1 (500mm) -->
  <joint name="shoulder" type="revolute">
    <parent link="link_1"/>
    <child link="upper_arm"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <link name="upper_arm">
    <visual>
      <origin xyz="0 0 0.25"/>
      <geometry>
        <cylinder length="0.5" radius="0.05"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.25"/>
      <geometry>
        <cylinder length="0.5" radius="0.05"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.8" length="0.5" radius="0.04">
        <origin xyz="0 0 0.25" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- ARM 2 (400mm) -->
  <joint name="elbow" type="revolute">
    <parent link="upper_arm"/>
    <child link="fore_arm"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <link name="fore_arm">
    <visual>
      <origin xyz="0 0 0.2"/>
      <geometry>
        <cylinder length="0.4" radius="0.035"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.2"/>
      <geometry>
        <cylinder length="0.4" radius="0.035"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder  mass="0.6" length="0.4" radius="0.035">
        <origin xyz="0 0 0.2" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- ARM 3 (100mm) -->
  <joint name="wrist" type="revolute">
    <parent link="fore_arm"/>
    <child link="hand"/>
    <origin xyz="0 0 0.4" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <link name="hand">
    <visual>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <cylinder length="0.1" radius="0.03"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <cylinder length="0.1" radius="0.03"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.3" length="0.1" radius="0.03">
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <!-- END EFFECTOR (360-degree rotation) -->
  <joint name="joint_end_effector" type="continuous">
    <parent link="hand"/>
    <child link="fingers"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="fingers">
    <visual>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <cylinder length="0.1" radius="0.025"/>
      </geometry>
      <material name="orange"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <cylinder length="0.1" radius="0.025"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.2" length="0.1" radius="0.025">
        <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

</robot>
